<h1>List of files</h1>

<table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Filename</th>
                <th>Link</th>
            </tr>
        </thead>
        <tbody>
<% @user_files.each do |ufile| %>
            <tr>
                <td><%= ufile.name %></td>
                <td><%= ufile.file_name %></td>
                <td><%=  link_to "Link", ufile.file.url, target: '_blank' %></td>
            </tr>
<% end %>
        </tbody>
    </table>



<%= link_to 'Add your file', new_user_file_path, class: 'btn btn-lg btn-primary' %>