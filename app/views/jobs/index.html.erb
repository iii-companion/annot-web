  <h1>Jobs for <%= current_user[:name] %> <small> (<%= @outjobs.reduce(0) { |a,job| if job[:working] then a + 1 else a end } %> currently running)</small></h1>
  <%= button_to new_job_path, class: "btn btn-default", method: :get do %>
         <i class="glyphicon glyphicon-plus"></i> New job
  <% end %>
    <table style="white-space:nowrap;" class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Started at</th>
                <th>Status</th>
                <th></th>
           </tr>
        </thead>
        <tbody>
<% @outjobs.each do |job| %>
            <tr  >
                <td width="100%"><span title="<%= job[:job_id] %>"><%= job[:name] %></span></td>
                <td><%= distance_of_time_in_words(Time.now,job[:created_at]) %> ago</td>
                <td style="padding-left: 20px; padding-right: 20px;">
                    <% if job[:queued] then %>
                        <span class="label label-info">Queued</span>
                    <% elsif job[:working] then %>
                        <span class="label label-info">Working</span>
                    <% elsif job[:failed] then %>
                        <span class="label label-danger">Failed</span>
                    <% elsif job[:complete] then %>
                        <span class="label label-success">Completed</span>
                    <% else %>
                        <span class="label label-default">No status available</span>
                    <% end %>
                </td>
                <td>
       <div class="btn-group">
       <%= link_to job_path(id: job[:job_id]), method: :delete, data: { confirm: "Are you sure?" } do %>
         <i class="glyphicon glyphicon-trash"></i> Delete
       <% end %>&nbsp;
       <%= link_to job_path(id: job[:job_id]) do %>
         <i class="glyphicon glyphicon-eye-open"></i> Show
       <% end %>
       </div>
                </td>
            </tr>
<% end %>
        </tbody>
    </table>
