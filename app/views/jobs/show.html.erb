<% content_for(:title, "#{@job[:name]} results") %>
<div class="page-header">
  <h1><%= @job[:name] %><span class="small"> (<%= @job[:prefix] %>)</span>
    <% if @queued then %>
        <span class="label label-default pull-right">Queued</span>
    <% elsif @working then %>
        <span class="label label-info pull-right">Working</span>
    <% elsif @failed then %>
        <span class="label label-danger pull-right">Failed</span>
    <% elsif @complete then %>
        <span class="label label-success pull-right">Completed</span>
    <% else %>
        <span class="label label-default pull-right">No status available</span>
    <% end %>
  </h1>
</div>
<script>
var phylocanvas;
var vtable;
</script>

<div class="modal fade" id="genelistmodal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="gltabledesc"></h4>
      </div>
      <div class="modal-body">
        <div class="span3">
          <table class="table table-striped" id="glmtable">
            <thead>
              <tr>
                <th data-field="id">Gene ID</th>
                <th data-field="product">Product</th>
              </tr>
            </thead>
          </table>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="thumbmodal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
      </div>
    </div>
  </div>
</div>

<p>This job was submitted <b><%= distance_of_time_in_words(Time.now,@job[:created_at]) %></b> ago
  <% if @complete then %>
    and ran for <b><%= distance_of_time_in_words(@job[:started_at],@job[:finished_at])%></b>, finally finishing at <b><%= @job[:finished_at] %></b>.
  <% elsif @working then %>
    and is running now for <b><%= distance_of_time_in_words(Time.now,@job[:created_at]) %></b>.
  <% elsif @failed then %>
    and failed <b><%= distance_of_time_in_words(Time.now,@job[:created_at]) %></b> ago.
  <% end %>
</p>

<% if @complete then %>

<div style="margin-top:20px;">&nbsp;</div>

<ul class="nav nav-tabs">
  <li class="active"><a data-toggle="tab" href="#stats">Genome statistics</a></li>
  <% if @job.result_files.size > 0 then %>
  <li><a data-toggle="tab" href="#result">Result files</a></li>
  <% end %>
  <% if @job[:finished_at] then %>
  <li><a data-toggle="tab" href="#orth">Orthology</a></li>
  <% end %>
  <% if @job[:finished_at] then %>
  <li><a data-toggle="tab" href="#phylo">Phylogeny</a></li>
  <% end %>
  <li><a data-toggle="tab" href="#synteny">Synteny</a></li>
  <li><a data-toggle="tab" href="#params">Job parameters</a></li>
  <li><a data-toggle="tab" href="#logs">Pipeline logs</a></li>
  <li><a data-toggle="tab" href="#report">Validator report</a></li>
</ul>

<div class="tab-content">
  <div id="stats" class="tab-pane fade in active">
      <table class="table table-striped">
        <thead>
            <tr>
                <th></th>
                <th class="text-right">Value</th>
            </tr>
        </thead>
         <tbody>
            <tr>
                <td>Number of annotated regions/sequences</td>
                <td class="text-right"><%= @job.genome_stat[:nof_regions]%></td>
            </tr>
            <tr>
                <td>Number of genes</td>
                <td class="text-right"><%= @job.genome_stat[:nof_genes]%></td>
            </tr>
            <tr>
                <td>Gene density (genes/megabase)</td>
                <td class="text-right"><%= @job.genome_stat[:gene_density]%></td>
            </tr>
            <tr>
                <td>Number of coding genes</td>
                <td class="text-right"><%= @job.genome_stat[:nof_coding_genes]%></td>
            </tr>
            <tr>
                <td>Number of genes with function</td>
                <td class="text-right"><%= @job.genome_stat[:nof_genes_with_function]%></td>
            </tr>
            <tr>
                <td>Number of non-coding genes</td>
                <td class="text-right"><%= @job.genome_stat[:nof_genes].to_i - @job.genome_stat[:nof_coding_genes].to_i %></td>
            </tr>
            <tr>
                <td>Number of genes with multiple CDSs</td>
                <td class="text-right"><%= @job.genome_stat[:nof_genes_with_mult_cds]%></td>
            </tr>
            <tr>
                <td>Overall GC%</td>
                <td class="text-right"><%= @job.genome_stat[:gc_overall].round(2)%></td>
            </tr>
            <tr>
                <td>Coding GC%</td>
                <td class="text-right"><%= @job.genome_stat[:gc_coding].round(2)%></td>
            </tr>
        </tbody>
      </table>
  </div>

  <% if @job.result_files.size > 0 then %>
    <div id="result" class="tab-pane fade">
      <table class="table table-striped">
        <thead>
            <tr>
                <th></th>
                <th class="text-right">MD5</th>
                <th class="text-right">Size</th>
            </tr>
        </thead>
        <tbody>
          <% @job.result_files.each do |file| %>
            <tr>
                <td><%= link_to file.file.url do %>
                    <i class="glyphicon glyphicon-download-alt"></i>
                     <%= JobsHelper::file_description(file.file.name) %>
                <% end %></td>
                <% if file.md5 then %>
                <td class="text-right">
                  <a data-toggle="popover"
                     data-placement="left"
                     data-trigger="hover"
                     data-content="<%= file.md5 %>">
                     <i class="glyphicon glyphicon-barcode"></i>
                  </a>
                </td>
                <% else %>
                <td class="text-right">n/a</td>
                <% end %>
                <td class="text-right"><%= number_to_human_size(file.file.size) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>

  <% if @job[:finished_at] then %>
    <div id="orth" class="tab-pane fade">
        <div style="display: none" id="orthoview">
        <p>Click on the numbers to view clusters and singleton gene lists.</p>
          <table class="small" style="width:700px;">
            <tr>
            <td style="width:12%;">
              <%= link_to '', {:class => 'genome-singletons-link'} do %>
                <span id="genome-singletons"></span> singletons
              <% end %>
            </td>
            <td style="width:76%;"><div id="jvenn-container"></div></td>
            <td style="width:12%;">
              <%= link_to '', {:class => 'ref-singletons-link'} do %>
                <span id="ref-singletons"></span> singletons
              <% end %>
            </td>
            </tr>
          </table>
        </div>
        <div id="orthospinner">
          <%= image_tag 'ajax-loader.gif' %><br /><br />
        </div>
        <h3 style="display: none" id='vtabledesc'></h3>
        <div style="display: none" id="vtablediv">
          <table  class="table table-striped display compact" cellspacing="0" id="vtable">
            <thead>
                  <tr>
                      <th>Cluster</th>
                      <th>ID</th>
                      <th>Product</th>
                  </tr>
              </thead>
          </table>
        </div>
        <div style="display: none" id="gltablediv">
          <table class="table table-striped display compact" cellspacing="0" id="gltable">
            <thead>
                  <tr>
                      <th>Gene ID</th>
                      <th>Sequence</th>
                      <th>Start</th>
                      <th>End</th>
                      <th>Strand</th>
                      <th>Product</th>
                  </tr>
              </thead>
          </table>
        </div>
        <div>
          <%= link_to clusters_url(id: @job[:job_id]) do %>
              <i class="glyphicon glyphicon-download-alt"></i> Cluster assignments
         <% end %> as OrthoMCL 1.4 output file
        </div>
    </div>
  <% end %>

  <% if @job[:finished_at] and @job.tree then %>
    <div id="phylo" class="tab-pane fade">
      <div id ="phyloview">
        <p>Click and drag in the diagram below to pan around. Use the mouse wheel to zoom in and out.</p>
        <div class="center-block col-md-4" style="float: none;">
          <form>
            <div class="btn-group" data-toggle="buttons">
                <label onClick="phylocanvas.setTreeType('rectangular');" class="btn btn-default active">
                    <input id="tree-rectangular" name="treetype" type="radio" checked="checked" /> Rectangular
                </label>
                <label onClick="phylocanvas.setTreeType('circular');" class="btn btn-default">
                    <input id="tree-circular" name="treetype" type="radio" /> Circular
                </label>
                <label onClick="phylocanvas.setTreeType('radial');" class="btn btn-default">
                    <input id="tree-radial" name="treetype" type="radio" /> Radial
                </label>
                <label onClick="phylocanvas.setTreeType('diagonal');" class="btn btn-default">
                    <input id="tree-diagonal" name="treetype" type="radio"  /> Diagonal
                </label>
            </div>
          </form>
        </div>
        <div id="PhyloCanvas" style="height: 600px; width=100%;"> </div>
      </div>
      <div id="phylospinner">
        <%= image_tag 'ajax-loader.gif' %>
      </div>
      <div>
        <%= link_to @job.tree.seq.url do %>
          <i class="glyphicon glyphicon-download-alt"></i> Multiple sequence alignment
        <% end %> for this tree (FASTA)<br />
        <%= link_to '', {:class => 'tree_genes'} do %>
          <i class="glyphicon glyphicon-list"></i> Core genes
        <% end %> used to build this tree
      </div>
    </div>
  <% end %>

  <div id="synteny" class="tab-pane fade">
    <% if @job[:do_contiguate] and @job.circos_images.size > 0 then %>
      <div class="row">
        <p>Each circle below represents a single target-reference pseudochromosome
           alignment. Click on it to zoom in.</p>
      </div>
      <div class="row">
        <ul class="media-list">
          <% @job.circos_images.sort { |a,b| a.chromosome <=> b.chromosome }.each do |image| %>
          <li class="media">
            <div class="media-left">
              <a href="#">
                <%= image_tag image.file.thumb('70x70').url, class: "media-object chrthumb", :data => {:full_URL => image.file.url} %>
              </a>
            </div>
            <div class="media-body">
              <% if image.chromosome %>
                <h4 class="media-heading">
                  <% if image.chromosome.match(/_0$/) %>
                    Bin chromosome
                  <% else %>
                    Chromosome <%= image.chromosome %>
                  <% end  %>
                </h4>
                <p>
                  <% if image.chromosome.match(/_0$/) %>
                    This is the <i>bin chromosome</i>, a virtual concatenation of all uncontiguated scaffolds aligned against all <i><%= @ref.name %></i> reference sequences.
                  <% else %>
                    This is pseudochromosome <%= image.chromosome %> generated from input file '<%= @job.sequence_file.file_name %>' aligned against its <i><%= @ref.name %></i> reference chromosome.
                  <% end  %>
                </p>
              <% end %>
            </div>
          </li>
          <% end %>
        </ul>
      </div>
    <% else %>
        <p>This job does not include reference-based contiguation.
           No reference synteny plots are available.</p>
    <% end %>
  </div>


  <div id="logs" class="tab-pane fade">
      <h4>Standard output:</h4>
      <pre class='span3'><%= @job[:stdout] %></pre>
      <% if @job[:stderr] && @job[:stderr].length > 0 then %>
      <h4>Standard error:</h4>
      <pre class='span3'><%= @job[:stderr] %></pre>
      <% end %>
  </div>


  <div id="params" class="tab-pane fade">
      <div>
        The parameters you have chosen for your <b><%= @job.sequence_file.file_name %></b> vs. <b><%= @ref.name %></b> run are:
      </div>
      <table class="table table-striped">
          <tbody>
            <tr>
                <td>Pseudochromosomes</td>
                <td>
                    <% if @job[:do_contiguate] %>
                      &#10003;
                    <% else %>
                      &#10007;
                    <% end %>
                </td>
            </tr>
            <tr>
                <td>Protein evidence</td>
                <td>
                    <% if @job[:do_exonerate] %>
                      &#10003;
                    <% else %>
                      &#10007;
                    <% end %>
                </td>
            </tr>
            <tr>
                <td>RATT</td>
                <td>
                    <% if @job[:do_ratt] %>
                      &#10003;
                    <% else %>
                      &#10007;
                    <% end %>
                </td>
            </tr>
            <tr>
                <td>RATT transfer type</td>
                <td><%= @job[:ratt_transfer_type] %></td>
            </tr>
            <tr>
                <td>SNAP</td>
                <td>
                    <% if @job[:run_snap] %>
                      &#10003;
                    <% else %>
                      &#10007;
                    <% end %>
                </td>
            </tr>
            <tr>
                <td>Max gene length</td>
                <td><%= @job[:max_gene_length] %></td>
            </tr>
            <tr>
                <td>Score threshold</td>
                <td><%= @job[:augustus_score_threshold].round(2) %></td>
            </tr>
            <tr>
                <td>Transcript evidence</td>
                <td>
                    <% if @job[:use_transcriptome_data] %>
                      &#10003;
                    <% else %>
                      &#10007;
                    <% end %>
                </td>
            </tr>
            <% if @job[:use_transcriptome_data] %>
            <tr>
                <td>Transcript filename</td>
                <td><%= @job.transcript_file.file_name %></td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>

    <div id="report" class="tab-pane fade">
      <div id="report_text">
      </div>
    </div>
</div>

<script>
$(document).ready(function(){
  $('#phyloview').hide();
  $('[data-toggle="popover"]').popover();
  $.getJSON( "<%= job_path(:id => @job[:job_id]) %>/orths", function(data) {
    $('#orthospinner').hide();
    $('#orthoview').show();
    $('#jvenn-container').jvenn({
      displayStat: false,
      exporting: true,
      series: data,
      fnClickCallback: function() {
        var value = "";
        for (name in this.listnames) {
          value += this.listnames[name] + " ";
        }
        value = value.trim();
        $.getJSON( "<%= job_path(:id => @job[:job_id]) %>/orths/cluster/" + value, function(data2) {
          $('#vtabledesc').text("Clusters in: " + value);
          $('#vtabledesc').show();
          $('#gltablediv').hide();
          $('#vtablediv').show();
          var vtable = $('#vtable').DataTable( {
            data: data2,
            "columns": [
                    { data: "cluster" },
                    { data: "id" },
                    { data: "product" }
                ],
            "destroy": true
          });
          vtable.columns.adjust().draw();
          if (data2.length > 0) {
            $('#vdownloadlink-container').show();
            $('#vdownloadlink').attr('href','<%= job_path(:id => @job[:job_id]) %>/orths/cluster/'+ value);
          } else {
            $('#vdownloadlink-container').hide();
          }
          $('#orthospinner').hide();
          $('#orthoview').show();
        });
      }
    });
  });
  $.getJSON( "<%= job_path(:id => @job[:job_id]) %>/singletons", function(data) {
    $('#ref-singletons').text(data.ref.length);
    $('#genome-singletons').text(data.this.length);
    $('.ref-singletons-link').click(function(event) {
      $('#vtabledesc').text("Singleton genes in reference genome");
      $('#vtabledesc').show();
      $('#vtablediv').hide();
      $('#gltablediv').show();
      var mytable = $('#gltable').DataTable( {
            data: data.ref,
            "columns": [
                    { data: "gene_id" },
                    { data: "seqid" },
                    { data: "loc_start" },
                    { data: "loc_end" },
                    { data: "strand" },
                    { data: "product" }
                ],
            "destroy": true
          });
      mytable.columns.adjust().draw();
      event.preventDefault();
    });
    $('.genome-singletons-link').click(function(event) {
      $('#vtabledesc').text("Singleton genes in new genome");
      $('#vtabledesc').show();
      $('#vtablediv').hide();
      $('#gltablediv').show();
      var mytable = $('#gltable').DataTable( {
            data: data.this,
            "columns": [
                    { data: "gene_id" },
                    { data: "seqid" },
                    { data: "loc_start" },
                    { data: "loc_end" },
                    { data: "strand" },
                    { data: "product" }
                ],
            "destroy": true
          });
      mytable.columns.adjust().draw();
      event.preventDefault();
    });
  });

  var firstPhyloTabOpen = true;
  var firstReportTabOpen = true;
  // hook into tab change events
  $('a[data-toggle="tab"]').on('shown.bs.tab', function(e) {
    var target = $(e.target).attr("href");
    if (target == '#phylo' && firstPhyloTabOpen) {
      $.get('<%= job_path(:id => @job[:job_id]) %>/tree.nwk', function(tree) {
        $('#phylospinner').hide();
        $('#phyloview').show();
        phylocanvas = new PhyloCanvas.Tree('PhyloCanvas', { history_collapsed : true });
        phylocanvas.setTreeType("radial");
        phylocanvas.load(tree);
        phylocanvas.setNodeColourAndShape('<%= @job[:prefix] %>', '#0000FF', 'x');
      });
      firstPhyloTabOpen = false;
    }
    if (target == '#report' && firstReportTabOpen) {
      $.get('<%= job_path(:id => @job[:job_id]) %>/report.html', function(report) {
        $('#report_text').html(report)
        $('[data-toggle="popover"]').popover();
      });
      firstReportTabOpen = false;
    }
  });

  $('.chrthumb').on('click',function(){
    var src = $(this).attr('data-full-URL');
    var img = '<img src="' + src + '" class="img-responsive"/>';
    $('#thumbmodal').modal();
    $('#thumbmodal').on('shown.bs.modal', function(){
        $('#thumbmodal .modal-body').html(img);
    });
    $('#thumbmodal').on('hidden.bs.modal', function(){
        $('#thumbmodal .modal-body').html('');
    });
  });
  $('.tree_genes').click(function(event) {
    $.getJSON( "<%= job_path(:id => @job[:job_id]) %>/tree/genes", function(data) {
      $("#glmtable").empty();
      for(var i = 0; i < data.length; i++) {
        $("#glmtable").append("<tr><td>" + data[i].gene_id + "</td><td>"
                                       + data[i].product + "</td></tr>");
      }
      $('#genelistmodal').modal();
    });
    event.preventDefault();
  });
});
</script>
<% else %>
Please check back later to see the results of your run once it has finished.
<% end %>